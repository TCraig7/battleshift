<h1>Enter Registration Details</h1>

<%= form_tag('/api/v1/users', method: :post) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= label_tag :password %>
  <%= password_field_tag :password_confirmation %>

  <%= submit_tag "Submit" %>
<% end %>